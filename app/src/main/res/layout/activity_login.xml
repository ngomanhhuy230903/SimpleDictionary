<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".view.MainActivity">

    <EditText android:id="@+id/et_register_email" android:hint="Email" ... />
    <EditText android:id="@+id/et_register_password" android:hint="Password" android:inputType="textPassword"/>
    <Button android:id="@+id/btn_register" android:text="Đăng ký" ... />
    <TextView android:id="@+id/tv_go_to_login" android:text="Đã có tài khoản? Đăng nhập" ... />


</LinearLayout>